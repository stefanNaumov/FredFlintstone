<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/events_list_layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ACAC83"
    android:layout_margin="30dp"
    android:alpha="0.6">


    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/grid_event_uuid"
        android:visibility="invisible"/>
    <TextView
        style="@style/eventsTextViewStyle"
        android:id="@+id/grid_title"/>

    <TextView
        style="@style/eventsTextViewStyle"
        android:id="@+id/grid_sportType"/>

    <TextView
        style="@style/eventsTextViewStyle"
        android:id="@+id/grid_city" />
    <Button
        android:onClick="listBtnOnClick"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/details"
        android:layout_gravity="end"
        android:id="@+id/eventDetails_btn"
        style="@style/mainActivityBtnStyle"/>

</LinearLayout>
