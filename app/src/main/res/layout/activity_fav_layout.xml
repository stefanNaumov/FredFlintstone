<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_fav_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ACAC83"
    android:layout_margin="30dp"
    android:alpha="0.6"
    android:onClick="FavEventsDetailsOnClick">


    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/myfav_event_uuid"
        android:visibility="invisible"/>
    <TextView
        style="@style/eventsTextViewStyle"
        android:id="@+id/myfav_event_title"/>

    <TextView
        style="@style/eventsTextViewStyle"
        android:id="@+id/myfav_event_sportType"/>

    <TextView
        style="@style/eventsTextViewStyle"
        android:id="@+id/myfav_event_city" />


</LinearLayout>