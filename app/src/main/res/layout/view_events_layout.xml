<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/football_field">


    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/grid_event_uuid"
        android:visibility="invisible"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="#1014A1"
        android:textSize="20sp"
        android:id="@+id/grid_title"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="#1014A1"
        android:textSize="20sp"
        android:id="@+id/grid_sportType"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textColor="#1014A1"
        android:textSize="20sp"
        android:id="@+id/grid_city" />
    <Button

        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/details"
        android:layout_gravity="end"
        android:id="@+id/eventDetails_btn"
        android:onClick="listBtnOnClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView1"/>
</LinearLayout>
